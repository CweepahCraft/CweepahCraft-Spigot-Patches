Subject: [PATCH 17/18] Implement whole-inventory containsAtLeast

---
 src/main/java/org/bukkit/craftbukkit/inventory/CraftInventory.java | 6 +++++-
 1 file changed, 5 insertions(+), 1 deletion(-)

diff --git a/src/main/java/org/bukkit/craftbukkit/inventory/CraftInventory.java b/src/main/java/org/bukkit/craftbukkit/inventory/CraftInventory.java
index 4866d1a..a37dec7 100644
--- a/src/main/java/org/bukkit/craftbukkit/inventory/CraftInventory.java
+++ b/src/main/java/org/bukkit/craftbukkit/inventory/CraftInventory.java
@@ -157,13 +157,17 @@ public class CraftInventory implements Inventory {
     }
 
     public boolean containsAtLeast(ItemStack item, int amount) {
+        return containsAtLeast(item, amount, false);
+    }
+
+    public boolean containsAtLeast(ItemStack item, int amount, boolean includeAll) {
         if (item == null) {
             return false;
         }
         if (amount <= 0) {
             return true;
         }
-        for (ItemStack i : getStorageContents()) {
+        for (ItemStack i : includeAll ? getContents() : getStorageContents()) {
             if (item.isSimilar(i) && (amount -= i.getAmount()) <= 0) {
                 return true;
             }
